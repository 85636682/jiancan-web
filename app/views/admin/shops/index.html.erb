<div class="container">
  <div class="row">
    <div class="col-sm-3">
      <%= render 'admin/shared/left_bar' %>
    </div>
    <div class="col-sm-9">
      <div class="card card-block right-content">

        <table class="table">
          <tbody>
          <% @shops.each do |shop| %>
            <tr>
              <th scope="row">1</th>
              <td>
                <%= image_tag(shop.avatar.url("80x80"), :alt=>"店铺头像", :class=>"img-circle", :width => "40", :height => "40") %>
              </td>
              <td><%= shop.name %></td>
              <td><%= shop.mobile %></td>
              <td>
                <a href="<%= edit_admin_shop_path(shop) %>" class="btn btn-primary-outline btn-sm">修改</a>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
