<table class="table">
  <tbody>
  <% @shops.each do |shop| %>
    <tr>
      <th scope="row">1</th>
      <td>
        <%= image_tag(shop.avatar.url("80x80"), :alt=>"店铺头像", :class=>"img-circle", :width => "40", :height => "40") %>
      </td>
      <td><%= shop.name %></td>
      <td><%= shop.address %></td>
      <td><%= shop.mobile %></td>
      <td>
        <a href="<%= edit_admin_shop_path(shop) %>" class="btn btn-primary-outline btn-sm">修改</a>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>