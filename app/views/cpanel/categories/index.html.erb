<%= render 'navbar' %>
<% if not current_merchant.shop.blank? %>
  <% if @categories.count >= 1 %>
    <table class="table">
      <thead>
        <tr>
          <th># <i class="fa fa-sort"></i></th>
          <th>名称 <i class="fa fa-sort"></i></th>
          <th>操作</th>
        </tr>
      </thead>
      <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.id %></td>
          <td><%= category.name %></td>
          <td>
            <a href="<%= edit_cpanel_category_path(category) %>" class="btn btn-primary-outline btn-sm">修改</a>
            <%= link_to "删除", cpanel_category_path(category), :class => "btn btn-primary-outline btn-sm", :method => :delete %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
    <%= will_paginate @categories, renderer: BootstrapPagination::Rails %>
  <% else %>
    <p>
      还未添加任何分类，<a href="<%= new_cpanel_category_path %>">现在添加？</a>
    </p>
  <% end %>
<% else %>
<p>
  还未拥有店铺，<a href="<%= new_cpanel_shop_path %>">现在创建？</a>
</p>
<% end %>
