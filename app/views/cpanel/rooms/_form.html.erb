<%= form_for [:cpanel, @room] do |f| %>
  <%= f.hidden_field :shop_id, value: @shop.id %>
  <div class="form-group row">
    <label for="inputEmail3" class="col-sm-2 form-control-label">座位名称</label>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control", placeholder: "名称" %>
    </div>
  </div>
  <div class="form-group row">
    <label for="inputPassword3" class="col-sm-2 form-control-label">可以容纳人数</label>
    <div class="col-sm-10">
      <%= f.text_field :seat, class: "form-control", placeholder: "人数" %>
    </div>
  </div>
  <div class="form-group row">
    <label for="inputEmail3" class="col-sm-2 form-control-label"></label>
    <div class="col-sm-10">
      <%= f.submit "保 存", class: "btn btn-primary btn-lg btn-block" %>
    </div>
  </div>
<% end %>