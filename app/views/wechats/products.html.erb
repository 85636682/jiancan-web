<div class="ui bottom attached segment pushable">
  <div class="ui visible inverted left vertical sidebar menu">
    <% @categories.each do |category| %>
    <a class="item" href="<%= products_wechat_path(:shop_id => @shop.id, :category_id => category.id) %>">
      <i class="home icon"></i>
      <%= category.name %>
    </a>
    <% end %>
  </div>
  <div class="pusher">
    <div class="ui basic segment">
      <div class="ui list">
        <% @products.each do |product| %>
          <div class="item">
            <h4 class="ui image header">
              <%= image_tag(product.avatar.url("80x80"), :class=>"ui mini rounded image") %>
              <div class="content">
                <%= product.name %>
                <div class="sub header">ï¿¥<%= product.price %></div>
              </div>
            </h4>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
