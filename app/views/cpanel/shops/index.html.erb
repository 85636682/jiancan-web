<%= render 'navbar' %>
<% if not @shop.blank? %>
<table class="table">
  <thead>
    <th>
      头像
    </th>
    <th>
      店名
    </th>
    <th>
      地址
    </th>
    <th>
      电话
    </th>
    <th>
      操作
    </th>
  </thead>
  <tbody>
    <tr>
      <td>
        <%= image_tag(@shop.avatar.url("80x80"), :alt=>"店铺头像", :class=>"img-circle", :width => "40", :height => "40") %>
      </td>
      <td><%= @shop.name %></td>
      <td><%= @shop.address %></td>
      <td><%= @shop.mobile %></td>
      <td>
        <a href="<%= edit_cpanel_shop_path(@shop) %>" class="btn btn-primary-outline btn-sm">修改</a>
      </td>
    </tr>

  </tbody>
</table>
<% else %>
<p>
  还未拥有店铺，<a href="<%= new_cpanel_shop_path %>">现在创建？</a>
</p>
<% end %>
